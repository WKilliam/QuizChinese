<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".HomePage">

    <Button
        android:id="@+id/startBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="155dp"
        android:layout_height="41dp"

        android:background="@android:drawable/button_onoff_indicator_off"
        android:text="Commencer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <Button
        android:id="@+id/about"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:text="A propos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/startBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/startBtn"
        app:layout_constraintTop_toBottomOf="@+id/refQuestion"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/refQuestion"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:text="RÃ©ponses"
        app:layout_constraintEnd_toEndOf="@+id/startBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/startBtn"
        app:layout_constraintTop_toBottomOf="@+id/startBtn" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="197dp"
        android:layout_height="34dp"
        android:background="#00CCCCCC"
        android:gravity="center"
        android:text="Apprendre le chinois"
        android:textColor="#004040"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/startBtn"
        app:layout_constraintEnd_toEndOf="@+id/startBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/startBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693" />

</androidx.constraintlayout.widget.ConstraintLayout>